@model WebAssets.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/AuthLayout/AuthLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            @*<div class="col-lg-6 d-none d-lg-block bg-login-image">
            </div>*@
            <img src="~/img/bg-login-3.jpg" class="col-lg-6 img-fluid d-none d-lg-block" />
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Welcome to AMIS Website</h1>
                        @if (@ViewBag.Message != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    </div>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NIK" class="control-label"></label>
                            <input asp-for="NIK" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group md-100">
                            <input type="submit" value="Login" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                    <hr />
                    <div class="text-center">
                        <footer class="footer text-muted">
                            <div class="container">
                                &copy; 2023 - AMIS
                            </div>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

