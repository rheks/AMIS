@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/DLayout/DLayout.cshtml";
}

<section class="vh-100">
    <div class="container py-md-5 mt-lg-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col h-100">
                <div class="card" style="border-radius: .5rem;">
                    <div class="row g-0">
                        @*<div class="col-md-4 text-center text-white"
                        style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                        alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                        <h5>Marie Horwitz</h5>
                        <p>Web Designer</p>
                        <i class="far fa-edit mb-5"></i>
                        </div>*@
                        <div class="col-md-12">
                            <div class="card-body p-4">
                                <h6>Profile</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>NIK</h6>
                                        <p class="text-muted" id="textNIK">@ViewBag.nik</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Name</h6>
                                        <p class="text-muted" id="textName">@ViewBag.name</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Date of Birth</h6>
                                        <p class="text-muted" id="textDoB"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Gender</h6>
                                        <p class="text-muted" id="textGender"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Address</h6>
                                        <p class="text-muted" id="textAddress"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted" id="textEmail"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted" id="textPhone"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Departement</h6>
                                        <p class="text-muted" id="textDepartement"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Role</h6>
                                        <p class="text-muted text-password" id="textRole"></p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Password</h6>
                                        <input type="password" class="form-control mb-3 w-50" name="password" id="InputPassword">
                                        <button type="button" class="btn btn-warning" id="buttonSubmit" onclick="Update()">Update</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/ProfileScript.js"></script>
}